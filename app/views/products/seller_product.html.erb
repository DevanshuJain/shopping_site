<h1>seller_product</h1>
<%= link_to 'add_product', new_product_path %><br />
<%= link_to 'product_status', product_status_path %>

<table class = "table" >
  <tr>
    <th>image</th>
    <th>Title</th>
    <th>description</th>
    <th>mrp</th>
    <th>available_quantity</th>
    <th></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag(product.avatar_url, height: '200', width: '150') if product.avatar? %></td>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.available_quantity %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>