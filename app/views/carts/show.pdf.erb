<!doctype html>
<% total=0 %>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
  </head>
  <body onload='number_pages'>
    <div id="header">
      <table class = "table" >
        <tr>
          <th>Title</th>
          <th>quantity</th>
          <th>price</th>
          <th></th>
        </tr>
        <% @order.carts.each do |cart| %>

        <% @product=Product.find(cart.product_id) %>
          <tr>
            <td><%= @product.title %></td>
            <td><%= cart.quantity %></td>
            <td><%= cart.price %></td>
          </tr>
            <% total= total+ cart.price %>
        <% end %>
      </table>
    </div>

    <strong>total_price</strong><%= total %>
  </body>
</html>